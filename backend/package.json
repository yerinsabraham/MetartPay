    "@solana/web3.js": "^1.87.6",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "bip39": "^3.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.15.0",
    "express": "^4.18.2",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^6.5.0",
    "hdkey": "^2.1.0",
    "helmet": "^7.1.0",
